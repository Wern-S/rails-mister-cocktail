<div class="container">
<%= simple_form_for @cocktail do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.button :submit, class: "btn-primary" %>
<% end %>

<span class="btn btn-outline-secondary mt-3"> <%= link_to 'Cancel', cocktails_path %></span>
</div>


